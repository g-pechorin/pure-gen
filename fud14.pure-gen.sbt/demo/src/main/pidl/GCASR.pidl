
import AudioLine from Audio

struct WordInfo
	startTime: real64
	endTime: real64
	word: text

struct Alternative
	confidence: real32
	transcript: text
	words: [WordInfo]

// connection to a stream-google-asr thing
pipe GoogleASR()
	! GConnect(AudioLine)
	! GDisconnect()
	? GRecognised(text [Alternative])
